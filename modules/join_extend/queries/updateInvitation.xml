<query id="updateInvitation" action="update">
    <tables>
        <table name="join_extend_invitation" />
    </tables>
    <columns>
        <column name="member_srl" var="member_srl" />
        <column name="joindate" var="joindate" />
    </columns>
    <conditions>
        <condition operation="equal" column="invitation_srl" var="invitation_srl"  notnull="notnull" />
    </conditions>
</query>
